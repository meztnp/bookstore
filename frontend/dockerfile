# Use Node.js official image for frontend build
FROM node:16 AS build
 
# Set working directory
WORKDIR /app
 
# Copy package.json and install dependencies
COPY package.json package-lock.json ./
RUN npm install
 
# Copy the rest of the application files
COPY . .
 
# Inject Kubernetes environment variables during build
ARG REACT_APP_CATALOG_SERVICE_API_URL
ARG REACT_APP_CART_SERVICE_API_URL
ENV REACT_APP_CATALOG_SERVICE_API_URL=$REACT_APP_CATALOG_SERVICE_API_URL
ENV REACT_APP_CART_SERVICE_API_URL=$REACT_APP_CART_SERVICE_API_URL
RUN npm run build
 
# Serve the frontend using Nginx
FROM nginx:alpine
 
# Copy build output to Nginx html directory
COPY --from=build /app/build /usr/share/nginx/html
 
# Expose port
EXPOSE 80
 
# Start Nginx
CMD ["nginx", "-g", "daemon off;"]